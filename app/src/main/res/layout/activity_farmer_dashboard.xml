<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".FarmerDashboard">

    <!-- Toolbar at the Top -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <!-- Container for Buttons and Images -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="200dp"
        android:padding="20dp"
        android:gravity="center">

        <!-- Upload and Produce Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_upload" />

            <Button
                android:id="@+id/btnUploadProduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_and_produce"
                android:padding="12dp"
                android:textSize="18sp"
                android:background="@drawable/roundstyle"
                android:textColor="@android:color/white"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <!-- Manage Product Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_manage" />

            <Button
                android:id="@+id/btnManageProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manage_product"
                android:padding="12dp"
                android:textSize="18sp"
                android:background="@drawable/roundstyle"
                android:textColor="@android:color/white"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <!-- Approval Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_approval" />

            <Button
                android:id="@+id/btnApproval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/approval"
                android:padding="12dp"
                android:textSize="18sp"
                android:background="@drawable/background14"
                android:textColor="@android:color/white"
                android:layout_marginStart="10dp" />
        </LinearLayout>



    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background"
        app:menu="@menu/bottom_menu" />



</RelativeLayout>
